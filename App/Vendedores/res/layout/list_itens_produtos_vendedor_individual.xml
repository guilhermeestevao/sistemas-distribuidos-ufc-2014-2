<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center|center_vertical"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_foto_produto_vendedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />
    
    <TextView
        android:id="@+id/tv_descricao_produto_vendedor_individual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_preco_produto_vendedor_individual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <Button
            android:id="@+id/comprar"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bordas_arredondadas_azul"
            android:gravity="center"
            android:text="COMPRAR"
            android:textColor="#ffffff" />

        <ImageButton
            android:id="@+id/bt_curtir"
            android:layout_width="54dp"
            android:layout_height="48dp"
            android:layout_gravity="center|center_horizontal"
            android:background="@null"
            android:gravity="center"
            android:src="@drawable/likef1" />
    </LinearLayout>

</LinearLayout>