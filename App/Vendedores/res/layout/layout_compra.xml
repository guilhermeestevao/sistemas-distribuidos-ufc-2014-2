<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:id="@+id/produto_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/produto_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/produto_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/produto_preco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/produto_vendedor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    
    <RatingBar android:id="@+id/avaliacao_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"/>
    
    <Button android:id="@+id/avaliar_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avaliar Produto"/>
    
    
</LinearLayout>