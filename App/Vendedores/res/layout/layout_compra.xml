<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/produto_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:background="#b31a1a"
        android:padding="10dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    
    <TextView android:id="@+id/produto_desc"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/produto_quantidade"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>

    <TextView android:id="@+id/produto_preco"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/produto_vendedor"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="18sp"
        android:layout_height="wrap_content"/>
    
    <RatingBar
        android:id="@+id/avaliacao_produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:numStars="5" />
    
    <Button
        android:id="@+id/avaliar_produto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bordas_arredondadas_vermelho"
        android:gravity="center"
        android:text="Avaliar Produto"
        android:textColor="#ffffff" />
    
</LinearLayout>