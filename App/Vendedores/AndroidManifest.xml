<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.ufc.si.sd"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.LoginActivity"
            android:label="@string/hello_world" >
        </activity>
        <activity
            android:name=".ListaVendedoresActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".CadastraProdutoActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_cadastra_produto"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ListaProdutosActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListaProdutosVendedor"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListaProdutosPorVendedor"
            android:configChanges="orientation"
            android:label="@string/title_activity_lista_produtos_por_vendedor"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".EditaProdutoActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ListaProdutosDoVendedorIndividual"
            android:label="@string/title_activity_lista_produtos_do_vendedor_individual" 
            android:screenOrientation="portrait" >
        </activity>

    </application>

</manifest>
